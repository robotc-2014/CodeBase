//Functions for Robot Mower
//Coded by Stephanie Almeida
//moveForwardWidth goes approximately 17-18 cm


	void moveForwardTouchSensor ()
	{
		int sensor;
		while (SensorValue(sensor == 0))
		{
			nSyncedMotors = synchBC;
			motor [motorB] = 50;
			motor [motorC] = 50;
		}
	}


	void moveForwardWidth ()
	{
		nSyncedMotors = synchBC;
		motor [motorB] = 50;
		motor [motorC] = 50;
		wait1Msec (900);
	}
